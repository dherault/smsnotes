{
  "name": "smsnotes",
  "version": "0.0.1",
  "description": "Take notes with SMS",
  "main": "index.js",
  "scripts": {
    "start": "npm run offline & npm run dev",
    "offline": "npm run resync && sls offline start -p dev",
    "offline_debug": "npm run resync && sls offline start -p dev --debugOffline",
    "dev": "node webpack/dev_server.js",
    "resync": "sh scripts/resync_vm_clock.sh",
    "ship": "npm run build && npm run deploy:client",
    "build": "npm run build:clean && npm run build:js && npm run build:size",
    "build:clean": "rm -f www/bundle.js",
    "build:js": "webpack --config webpack/webpack.config.prod.js --progress",
    "build:size": "du -h www/bundle.js",
    "build:test": "cd www && python -m SimpleHTTPServer 8080",
    "deploy:server": "npm run deploy:server:fn && npm run deploy:server:ep",
    "deploy:server:fn": "sls function deploy",
    "deploy:server:ep": "sls endpoint deploy -a",
    "deploy:server:sms": "npm run deploy:server:sms:fn && deploy:server:sms:ep",
    "deploy:server:sms:fn": "cd src/server/lambda_sms && sls function deploy",
    "deploy:server:sms:ep": "cd src/server/lambda_sms && sls endpoint deploy",
    "deploy:server:graphql": "npm run deploy:server:graphql:fn && deploy:server:graphql:ep",
    "deploy:server:graphql:fn": "cd src/server/lambda_graphql && sls function deploy",
    "deploy:server:graphql:ep": "cd src/server/lambda_graphql && sls endpoint deploy",
    "deploy_sms": "npm run deploy:server:sms",
    "deploy_sms_fn": "npm run deploy:server:sms:fn",
    "deploy_sms_ep": "npm run deploy:server:sms:ep",
    "deploy_graphql": "npm run deploy:server:graphql",
    "deploy_graphql_fn": "npm run deploy:server:graphql:fn",
    "deploy_graphql_ep": "npm run deploy:server:graphql:ep",
    "graphql_fn": "npm run deploy:server:graphql:fn",
    "graphql_ep": "npm run deploy:server:graphql:ep",
    "deploy:client": "npm run resync && npm run deploy:client:s3 && npm run deploy:client:cloudfront",
    "deploy:client:s3": "aws s3 cp --recursive www/ s3://www.smsnotes.com/ --acl public-read",
    "deploy:client:cloudfront": "echo \"You probably should invalidate the CloudFront cache.\"",
    "deploy:client:cloudfront_not_working": "aws cloudfront create-invalidation --distribution-id E22H4NZXOVN1U --paths /*",
    "sms:send": "node scripts/sms/sendOfflineSms.js",
    "sms:flood": "node scripts/sms/floodOfflineSms.js",
    "sms:unicode": "node scripts/sms/sendUnicodeOfflineSms.js",
    "db:createTables": "babel-node scripts/dynamodb/createTables.js",
    "db:deleteTables": "babel-node scripts/dynamodb/deleteTables.js",
    "db:listTables": "babel-node scripts/dynamodb/listTables.js",
    "db:resetTables": "npm run resync && npm run db:deleteTables && npm run db:createTables && npm run db:listTables"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dherault/smsnotes.git"
  },
  "keywords": [
    "smsnotes",
    "sms",
    "notes",
    "serverless"
  ],
  "author": "David HÃ©rault <dherault@gmail.com> (https://github.com/dherault)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dherault/smsnotes/issues"
  },
  "homepage": "https://github.com/dherault/smsnotes",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.5.0",
    "css-loader": "^0.23.1",
    "exports-loader": "^0.6.3",
    "express": "^4.13.4",
    "imports-loader": "^0.6.5",
    "postcss-import": "^8.1.0",
    "postcss-loader": "^0.8.2",
    "precss": "^1.4.0",
    "serverless-cors-plugin": "^0.4.1",
    "serverless-runtime-babel": "0.0.6",
    "style-loader": "^0.13.1",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
